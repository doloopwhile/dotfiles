[include]
    path = ~/.gitconfig.local
[color]
    ui = auto

[pager]
	log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[alias]
  b = branch -v
  br = branch -v
  cf = config --edit --global
  chx = cherry-pick -x
  ci = commit
  cin = commit --no-verify
  co = checkout
  d = diff
  dc = diff --cached
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
  dr = diff --color-words --word-diff-regex='\\w+|[^[:space:]]'
  dt=difftool --tool=meld -y
  dv = !sh -c 'git diff "$@" | ~/dotfiles/bin/save-tempfile -c gvim' -
  f = remote update
  getbranch = symbolic-ref --short HEAD
  gr = grep --ignore-case -n
  graph = log --graph --pretty=format:'%C(auto)%h %C(auto)%d %C(auto)%an %C(reset) %s' --abbrev-commit
  he = hook edit pre-commit
  hi = hook install pre-commit
  hl = hook show pre-commit
  ht = hook test pre-commit
  hu = hook update pre-commit
  mt=mergetool -y
  now=commit -a -m tmp --no-verify
  pr-setup = config --add remote.origin.fetch +refs/pull/*/head:refs/remotes/origin/pr/*
  r = reset
  reba = rebase --abort
  rebi = rebase -i
  rebc = rebase --continue
  reset-origin-hard = reset --hard origin
  rhh = reset HEAD^
  root = rev-parse --show-toplevel
  showf = show --name-only
  st = status -s --ignore-submodules
  updated=commit -a -m updated
  vimdiff=difftool --tool=gvimdiff
  shallow-clone = clone --depth 1 --single-branch
# lo = log --pretty=format:'%C(auto)%h%C(reset) %s'
  r = reset
  sh = show
  p = push
  pf = push --force-with-lease

[core]
    autocrlf = input
	excludesfile = ~/.gitignore
[push]
    default = current
[rebase]
  autosquash = true
[diff "po"]
        textconv=msgcat --no-location --no-wrap --sort-output
[merge]
	tool = meld
[diff]
	tool = meld
	algorithm = histogram
  compactionHeuristic = true

[mergetool]
  keepBackup = false
[status]
  showUntrackedFiles = all
[grep]
	lineNumber = true
[hooker]
	disableinrebase = true
	skipinrebase = true
[blame]
  showName = false
[ghq]
	root = ~/gocode/src
[tag]
	sort = version:refname
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
