#!/bin/bash
set -o pipefail
set -e
HASH=$(git log --oneline | peco | cut -d " " -f 1)
if [ "$?" -ne 0 -o -z "$HASH" ]; then
  exit 1
fi
git rebase -i "$HASH" $@

# install:
# * install peco if needed
# $ mkdir -p ~/bin && cd ~/bin
# $ wget https://gist.githubusercontent.com/doloopwhile/0979904bd854d2856780/raw/git-rebase-i-peco
# $ chmod +x ~/bin/git-rebase-i-peco
# $ git config --global alias.rp rebase-i-peco