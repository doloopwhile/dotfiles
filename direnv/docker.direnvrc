#!/bin/sh
use_docker-machine() {
  if [ $# -gt 1 ]; then
    echo "usage: use_docker-machine [MACHINE]" >&2
    return 1
  fi

  if ! which docker-machine > /dev/null 2>&1; then
    echo "'docker-machine' command not found in PATH" >&2
    return 1
  fi

  docker-machine start "$@"
  eval "$(docker-machine env "$@")"
}
